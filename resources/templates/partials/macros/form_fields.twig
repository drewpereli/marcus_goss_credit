
{% macro text(p) %}
	<div class="form-group">
		<label for="{{ p.name }}">
			{{ p.label|default(p.name|replace({"_": " "})|title) }}
		</label>
		<input
			id="{{ p.id|default(p.name) }}"
			name="{{ p.name }}"
			type="{{ p.type|default('text') }}"
			class="form-control {{p.required}} {{p.classes}}"
			value="{{ p.value|default('') }}"
			{% if p.required %}
				required="true"
			{% endif %}
			{% if p.title %}
				title="{{p.title}}"
			{% endif %}
		/>
	</div>
{% endmacro %}

